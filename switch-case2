import java.util.Scanner;  

public class GenderWelcome {  
    public static void main(String[] args) {  
        Scanner scanner = new Scanner(System.in);  
        
        System.out.print("Please enter your gender (M for Male, F for Female): ");  
        char gender = scanner.next().charAt(0); 

        switch (Character.toUpperCase(gender)) {   
            case 'M':  
                System.out.println("You are welcome, Sir!");  
                break;  
            case 'F':  
                System.out.println("You are welcome, Ma'am!");  
                break;  
            default:  
                System.out.println("Invalid input! Please enter 'M' for Male or 'F' for Female.");  
                break;  
        }  

        scanner.close(); 
    }  
}  
